citHeader("To cite package bride in publications use:")
     
     year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
     vers <- paste("R package version", meta$Version)
     
     citEntry(entry="Manual",
              title = 
                paste("bride: Brier Score Decomposition for",
                      "probabilistic forecasts of binary events"),
              author = 
                personList(person(given="Stefan", family="Siegert")),
              year = year,
              note = vers,
              textVersion =
                paste("Stefan Siegert and the R Core Team (",
                      year,"). bride: Brier Score Decomposition",
                      " for probabilistic forecasts of binary events. ",
                      vers, ".", sep="")
             )

