citHeader("To cite package bride in publications use:")
     year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
     vers <- paste("R package version", meta$Version)
     
     citEntry(entry="Manual",
              title = 
                paste("{bride}: Brier Score Decomposition for",
                      "probabilistic forecasts of binary events"),
              author = personList(as.person("Stefan Siegert")),
              year = year,
              note = vers,
              url = "http://CRAN.r-project.org/package=bride",
              textVersion =
                paste("Stefan Siegert (", year,"). bride: Brier Score ",
                      "Decomposition for probabilistic forecasts of ",
                      "binary events. ", vers, ".", sep="")
             )

